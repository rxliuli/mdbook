{
  "name": "@liuli-util/bundle",
  "private": true,
  "version": "0.1.0",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "setup": "pnpm build",
    "build": "tsx src/bin.ts",
    "start": "tsx src/bin.ts"
  },
  "bin": {
    "bundle": "./bin.js"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "devDependencies": {
    "@jest/globals": "^28.1.3",
    "@types/fs-extra": "^9.0.13",
    "@types/node": "^18.7.1",
    "jest": "^28.1.3",
    "ts-jest": "^28.0.7",
    "tsx": "^3.8.1",
    "type-fest": "^2.18.0",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "@liuli-util/esbuild-plugins": "^0.1.1",
    "commander": "^9.4.0",
    "esbuild": "^0.15.1",
    "fs-extra": "^10.1.0",
    "json5": "^2.2.1",
    "markdown-util": "workspace:^"
  },
  "sync": [
    "gitignore",
    "jest"
  ],
  "jest": {
    "preset": "ts-jest/presets/default-esm",
    "globals": {
      "ts-jest": {
        "useESM": true
      }
    },
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "testMatch": [
      "<rootDir>/src/**/__tests__/*.test.ts"
    ]
  },
  "wallaby": {
    "env": {
      "params": {
        "runner": "--experimental-vm-modules"
      }
    }
  }
}
